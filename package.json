{
  "name": "@manifoldco/mercury",
  "description": "Manifold Design System",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manifoldco/mercury.git"
  },
  "homepage": "https://github.com/manifoldco/mercury",
  "bugs": {
    "url": "https://github.com/manifoldco/mercury/issues"
  },
  "version": "0.1.1-beta.1",
  "main": "index.cjs.js",
  "module": "index.mjs",
  "sass": "index.scss",
  "types": "index.d.ts",
  "license": "BSD-3",
  "scripts": {
    "build": "npm run update-version && rm -rf pkg && mkdir pkg && cp -r src/. pkg && npm run build:css && npm run build:ts",
    "build:css": "sass pkg/index.scss --no-source-map |> /dev/null",
    "build:ts": "tsc --module esnext --declaration --skipLibCheck pkg/index.ts && mv pkg/index.js pkg/index.mjs && tsc --module commonjs --skipLibCheck pkg/index.ts && mv pkg/index.js pkg/index.cjs.js",
    "build-storybook": "make package && node scripts/storybook-icons && build-storybook",
    "clean-package-json": "node scripts/clean-package-json",
    "dev": "make package && node scripts/storybook-icons && start-storybook -p 6006",
    "extract": "npm run extract:styles && npm run extract:icons",
    "extract:icons": "rm -rf src/icons && figma-export use-config && mv src/Icons src/icons && node scripts/strip-icon-colors",
    "extract:styles": "ts-node --files figma",
    "update-version": "node scripts/version-from-git",
    "lint": "eslint '**/*.ts'",
    "test": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@figma-export/cli": "^2.0.0",
    "@figma-export/output-components-as-svg": "^2.0.0",
    "@figma-export/transform-svg-with-svgo": "^2.0.0",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/html": "^5.3.18",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.8",
    "@types/prettier": "^1.19.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-loader": "^8.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "figma-js": "^1.10.0",
    "jest": "^25.2.4",
    "jest-cli": "^25.2.4",
    "prettier": "^2.0.2",
    "rgb2hex": "^0.1.10",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
